#!/usr/bin/env bash
# Import Styles From Snippet Script
# Usage: import-snippet-styles <target-dir> <snippet-file>

set -euo pipefail

if [[ "${1:-}" == "help" || "${1:-}" == "--help" || "${1:-}" == "-h" ]]; then
    echo "Usage: import-snippet-styles <target-dir> <snippet-file>"
    echo ""
    echo "Import styles from an XML snippet file to expanded Word document"
    echo ""
    echo "Arguments:"
    echo "  target-dir   - Expanded Word document directory (e.g., in/, expanded/)"
    echo "  snippet-file - XML file containing style snippets"
    echo ""
    echo "Examples:"
    echo "  import-snippet-styles builds/jbc/workspace/jbcNormal/in snippets/heading-styles.xml"
    exit 0
fi

if [ $# -lt 2 ]; then
    echo "Usage: import-snippet-styles <target-dir> <snippet-file>"
    echo "Run 'import-snippet-styles --help' for more information"
    exit 1
fi

# Get the script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the Python script
python3 "$SCRIPT_DIR/import-snippet-styles.py" "$1" "$2"
